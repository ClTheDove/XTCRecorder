<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rename_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/title_left"
            android:layout_marginTop="@dimen/title_top"
            android:text="@string/my_recording"
            android:textColor="@color/title_text"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_no_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_file"
        android:textColor="@color/hint_text"
        android:textSize="@dimen/hint_text_size"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_list_title"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/list_item_side_space"
        android:overScrollMode="never"
        android:visibility="gone">

    </ListView>

</RelativeLayout>